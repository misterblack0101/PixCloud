{{template "header" .}}
    <div class="px-6">
    <h1 class="py-4 text-3xl font-bold">Frequently Asked Questions</h1>
    <ul class="grid grid-cols-1 md:grid-cols-2  gap-4">
    {{range .}}
        {{template "faq" .}}
    {{end}}
    </ul>
    </div>

{{template "footer" .}}

{{define "faq" }}
<li class="bg-blue-50 p-4 rounded-lg ">
    <strong class="text-xl font-bold">{{.Question}}</strong>
    <p class="mt-2 text-gray-700 text-lg">{{.Answer}}</p>
</li>
{{end}}